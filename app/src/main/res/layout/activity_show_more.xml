<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".showMore"
    android:background="#F8EFEF"
    >


    <View
        android:id="@+id/view"
        android:layout_width="420dp"

        android:layout_height="176dp"
        android:layout_marginRight="-6dp"

        android:layout_marginTop="-16dp"
        android:background="@drawable/vect"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"


        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"

            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tex"
                android:layout_width="match_parent"
                android:layout_height="69dp"

                android:fontFamily="@font/font3"
                android:gravity="center"
                android:text="Information"
                android:textColor="#EFEFEF"
                android:textSize="70dp"


                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView

                android:id="@+id/imageView1"
                android:layout_width="175dp"
                android:layout_height="155dp"

                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"

                android:layout_marginTop="16dp"
                android:src="@drawable/demoscan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.437"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tex" />

            <TextView
                android:id="@+id/classified1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"

                android:fontFamily="@font/font3"

                android:letterSpacing="0.15"
                android:text="Classified as:"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView1" />

            <TextView
                android:id="@+id/result1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/classified1"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textColor="#C30000"
                android:textSize="27sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/classified1" />

            <TextView
                android:id="@+id/sol1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/result1"
                android:layout_centerHorizontal="true"
                android:text=""
                android:layout_margin="15dp"
                android:textColor="#000000"
                android:padding="5dp"
                android:textSize="27sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/result1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>